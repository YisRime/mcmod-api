{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/dev.ts"],
  "exclude": ["node_modules"]
}